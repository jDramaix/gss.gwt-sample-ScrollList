.fade .item {
    -webkit-transition: opacity .35s ease-in-out;
       -moz-transition: opacity .35s ease-in-out;
        -ms-transition: opacity .35s ease-in-out;
         -o-transition: opacity .35s ease-in-out;
            transition: opacity .35s ease-in-out;
}
    .fade .item.past {
        opacity: 0;
    }
    .fade .item.future {
        opacity: 0;
    }


