.zipper .item {
    -webkit-transition: all 600ms cubic-bezier(0.390, 0.575, 0.565, 1.000);
       -moz-transition: all 600ms cubic-bezier(0.390, 0.575, 0.565, 1.000);
        -ms-transition: all 600ms cubic-bezier(0.390, 0.575, 0.565, 1.000);
