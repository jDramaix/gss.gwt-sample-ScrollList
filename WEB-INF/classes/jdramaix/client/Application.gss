/**
 * Css fully inspired by css of stroll.js (http://lab.hakim.se/scroll-effects/)
 */

@defmixin perspective(VALUE) {
    -webkit-perspective: VALUE;
       -moz-perspective: VALUE;
        -ms-perspective: VALUE;
         -o-perspective: VALUE;
            perspective: VALUE;
}

@defmixin perspectiveOrigin(X, Y) {
    -webkit-perspective-origin: X Y;
       -moz-perspective-origin: X Y;
        -ms-perspective-origin: X Y;
         -o-perspective-origin: X Y;
            perspective-origin: X Y;
}

@defmixin transition() {
    -webkit-transition: all 600ms ease,opacity 300ms ease;
       -moz-transition: all 600ms ease;
        -ms-transition: all 600ms ease,opacity 300ms ease;
         -o-transition: all 600ms ease,opacity 300ms ease;
            transition: all 600ms ease,opacity 300ms ease;
}

@defmixin transitionNoOpacity() {
    -webkit-transition: all 600ms ease;
       -moz-transition: all 600ms ease;
        -ms-transition: all 600ms ease;
         -o-transition: all 600ms ease;
            transition: all 600ms ease;
}


@defmixin transformOrigin(X, Y) {
    -webkit-transform-origin: X Y;
       -moz-transform-origin: X Y;
        -ms-transform-origin: X Y;
         -o-transform-origin: X Y;
            transform-origin: X Y;
}

@defmixin transform(X, Y, Z, RX, SCALE) {
     -webkit-transform: translate3d( X, Y, Z ) rotateX( RX ) scale( SCALE );
        -moz-transform: translate3d( X, Y, Z ) rotateX( RX ) scale( SCALE );
         -ms-transform: translate3d( X, Y, Z ) rotateX( RX ) scale( SCALE );
          -o-transform: translate3d( X, Y, Z ) rotateX( RX ) scale( SCALE );
             transform: translate3d( X, Y, Z ) rotateX( RX ) scale( SCALE );
}

.item {
    position: relative;
}

.pager {
    border: 1px solid #CCCCCC;
    height: 400px;
    text-align: left;
    width: 200px;
    margin: 10px;
}

/**
 * Cards styles
 */
.cards {
    @mixin perspective(300px);
    @mixin perspectiveOrigin(50%, 50%);
}

.cards .item {
    @mixin transitionNoOpacity();
    @mixin transformOrigin(100%, 50%);
}

.cards .item.future {
    @mixin transform(0, 100px, -100px, 90deg, 1);
}

/**
 * Grow styles
 */
.grow .item {
     @mixin transitionNoOpacity();
     @mixin transformOrigin(50%, 50%);

}

.grow .item.future {
    @mixin transform(0, 0, 0, 0, 0.01);
}


/**
 * Flip styles
 */
.flip {
    @mixin perspective(400px);
    @mixin perspectiveOrigin(50%, 50%);
}

.flip .item {
    @mixin transition();
    @mixin transformOrigin(0%, 0%);
}

.flip .item.future {
    opacity: 0;
    @mixin transform(0, 0, 0, -80deg, 1);
}

/**
 * Fly styles
 */
.fly {
    @mixin perspective(400px);
    @mixin perspectiveOrigin(50%, 50%);
}

.fly .item {
    @mixin transition();

-webkit-transform-origin: 50% 50% -50px;
   -moz-transform-origin: 50% 50% -50px;
    -ms-transform-origin: 50% 50% -50px;
     -o-transform-origin: 50% 50% -50px;
        transform-origin: 50% 50% -50px;
    }
.fly .item.past {
    opacity: 0;

    -webkit-transform: rotateX( 180deg );
       -moz-transform: rotateX( 180deg );
        -ms-transform: rotateX( 180deg );
         -o-transform: rotateX( 180deg );
            transform: rotateX( 180deg );
}
.fly .item.future {
    opacity: 0;

    -webkit-transform: rotateX( -180deg );
       -moz-transform: rotateX( -180deg );
        -ms-transform: rotateX( -180deg );
         -o-transform: rotateX( -180deg );
            transform: rotateX( -180deg );
}

/**
 * Reverse fly styles
 */
.fly-reverse {
    @mixin perspective(400px);
    @mixin perspectiveOrigin(50%, 50%);
}

    .fly-reverse .item {
-webkit-transition: all 600ms ease, opacity 300ms ease;
   -moz-transition: all 600ms ease;
    -ms-transition: all 600ms ease, opacity 300ms ease;
     -o-transition: all 600ms ease, opacity 300ms ease;
        transition: all 600ms ease, opacity 300ms ease;

-webkit-transform-origin: 50% 50% -50px;
   -moz-transform-origin: 50% 50% -50px;
    -ms-transform-origin: 50% 50% -50px;
     -o-transform-origin: 50% 50% -50px;
        transform-origin: 50% 50% -50px;
    }
.fly-reverse .item.past {
    opacity: 0;

    -webkit-transform: rotateX( -180deg );
       -moz-transform: rotateX( -180deg );
        -ms-transform: rotateX( -180deg );
         -o-transform: rotateX( -180deg );
            transform: rotateX( -180deg );
}
.fly-reverse .item.future {
    opacity: 0;

    -webkit-transform: rotateX( 180deg );
       -moz-transform: rotateX( 180deg );
        -ms-transform: rotateX( 180deg );
         -o-transform: rotateX( 180deg );
            transform: rotateX( 180deg );
}

/**
 * Skew
 */
 .skew {
     -webkit-perspective: 600px;
        -moz-perspective: 600px;
         -ms-perspective: 600px;
          -o-perspective: 600px;
             perspective: 600px;

     -webkit-perspective-origin: 0% 50%;
        -moz-perspective-origin: 0% 50%;
         -ms-perspective-origin: 0% 50%;
          -o-perspective-origin: 0% 50%;
             perspective-origin: 0% 50%;
 }
     .skew .item {
 -webkit-transition: all 600ms ease,
     opacity 200ms ease;
    -moz-transition: all 600ms ease;
     -ms-transition: all 600ms ease;
      -o-transition: all 600ms ease;
         transition: all 600ms ease;

 -webkit-transform-origin: 0% 0%;
    -moz-transform-origin: 0% 0%;
     -ms-transform-origin: 0% 0%;
      -o-transform-origin: 0% 0%;
         transform-origin: 0% 0%;
     }
 .skew .item.past {
     -webkit-transform: skewY( 30deg );
        -moz-transform: skewY( 30deg );
         -ms-transform: skewY( 30deg );
          -o-transform: skewY( 30deg );
             transform: skewY( 30deg );
 }
 .skew .item.future {
     z-index: 0;

     -webkit-transform: skewY( -30deg );
        -moz-transform: skewY( -30deg );
         -ms-transform: skewY( -30deg );
          -o-transform: skewY( -30deg );
             transform: skewY( -30deg );
 }


